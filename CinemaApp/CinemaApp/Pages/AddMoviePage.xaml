<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:renderers="clr-namespace:CinemaApp.Renderers"
             mc:Ignorable="d"
             x:Class="CinemaApp.Pages.AddMoviePage"
             BackgroundColor="#1A1717">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="15,20,15,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="7*" />
                        <ColumnDefinition Width="1.5*" />
                    </Grid.ColumnDefinitions>
                    <Image Source="backicon.png"
                           HorizontalOptions="Start"
                           Grid.Column="0"
                           Aspect="AspectFit"
                           WidthRequest="20"
                           HeightRequest="20">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="ImgBack" Tapped="ImgBack_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Text="Dodaj Film"
                           TextColor="White"
                           VerticalOptions="Start"
                           HorizontalOptions="Center"
                           FontSize="Title"
                           Grid.Column="1" />
                </Grid>
                <StackLayout Margin="0,10,0,0"
                             Spacing="4">
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntMovieName"
                                                   Placeholder="Nazwa filmu"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntLanguage"
                                                   Placeholder="Język"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntDuration"
                                                   Placeholder="Czas trwania"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntPlayingDate"
                                                   Placeholder="Data"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntPlayingTime"
                                                   Placeholder="Godzina"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntTicketPrice"
                                                   Placeholder="Cena biletu"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntRating"
                                                   Placeholder="Ocena"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntGenre"
                                                   Placeholder="Gatunek"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <renderers:BorderlessEntry x:Name="EntTrailorUrl"
                                                   Placeholder="Link traileru"
                                                   TextColor="Black"
                                                   PlaceholderColor="#131C25" />
                    </Frame>
                    <Frame Padding="2"
                           HasShadow="False">
                        <Editor x:Name="EdtDescription"
                                Placeholder="Opis"
                                HeightRequest="100"
                                TextColor="Black"
                                PlaceholderColor="white" />
                    </Frame>
                    <Image HorizontalOptions="End"
                           Aspect="Fill"
                           Margin="0,10,0,0"
                           HeightRequest="50"
                           WidthRequest="50"
                           x:Name="ImgMovie"
                           Source="uploadImage.png">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapPickImage" Tapped="TapPickImage_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="save.png"
                           Margin="0,10,0,0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="ImgSave" Tapped="ImgSave_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>