<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CinemaApp.Pages.HomePage"
             BackgroundColor="#1A1717"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Margin="0,60,0,0"
                     Spacing="50">
            <Label Text="Panel Administratora"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontSize="Title" />
            <Button x:Name="BtnMovies"
                    TextColor="White"
                    BackgroundColor="#1D1A1A"
                    FontSize="Title"
                    HeightRequest="200"
                    Text="Filmy" Clicked="BtnMovies_Clicked"/>
            <Button x:Name="BtnReservations"
                    TextColor="White"
                    BackgroundColor="#1D1A1A"
                    FontSize="Title"
                    HeightRequest="200"
                    Text="Rezerwacje" Clicked="BtnReservations_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>